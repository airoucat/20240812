{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "semi": "off", 
    "prettier/prettier": "error", 
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}